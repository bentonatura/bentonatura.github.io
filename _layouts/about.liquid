---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
        {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    <p class="desc">{{ page.subtitle }}{% if page.news or page.events or page.selected_papers %}<span class="desc-sep">//</span><span class="desc-nav">{% if page.news %}<a href="#news">News</a>{% endif %}{% if page.events %}<a href="#events">Events</a>{% endif %}{% if page.selected_papers %}<a href="#selected-works">Selected Works</a>{% endif %}</span>{% endif %}</p>
  </header>

  <article>
    {% if page.profile %}
      <div class="profile float-sm-{% if page.profile.align == 'left' %}left{% else %}right{% endif %}">
        {% if page.profile.image %}
          {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
          {% if page.profile.image_circular %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
          {% else %}
            {% assign profile_image_class = 'img-fluid z-depth-1
      rounded' %}
          {% endif %}
          {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px)
      30vw, 95vw"{% endcapture %}
          {%
            include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image
            cache_bust=true
          %}
        {% endif %}
        {% if page.social %}
          <div class="contact-icons mt-2 mb-2">{% social_links %}<img src="{{ '/assets/img/arsenal.svg' | relative_url }}" alt="Arsenal FC" class="arsenal-icon"></div>
        {% endif %}
        {% if page.profile.more_info %}
          <div class="more-info">{{ page.profile.more_info }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="clearfix">{{ content }}</div>

    <!-- News -->
    {% assign show_news = false %}
    {% if page.news %}{% assign show_news = true %}{% endif %}
    {% if page.announcements and page.announcements.enabled %}{% assign show_news = true %}{% endif %}
    {% if show_news %}
      <h2 id="news" class="homepage-section-heading">
        <a href="{{ '/news/' | relative_url }}">News</a>
      </h2>
      {% include news.liquid limit=true %}
    {% endif %}

    <!-- Events -->
    {% if page.events %}
      <h2 id="events" class="homepage-section-heading">
        <a href="{{ '/events/' | relative_url }}">Events</a>
      </h2>
      {% include events.liquid %}
    {% endif %}

    <!-- Latest posts -->
    {% if page.latest_posts and page.latest_posts.enabled %}
      <h2 id="posts" class="homepage-section-heading">
        <a href="{{ '/blog/' | relative_url }}">Latest Posts</a>
      </h2>
      {% include latest_posts.liquid %}
    {% endif %}

    <!-- Selected papers -->
    {% if page.selected_papers %}
      <h2 id="selected-works" class="homepage-section-heading">
        <a href="{{ '/publications/' | relative_url }}">Selected Works</a>
      </h2>
      {% include selected_papers.liquid %}
    {% endif %}

    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>
