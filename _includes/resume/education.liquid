<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign education = data[1] | sort: 'startDate' | reverse %}
  {% for content in education %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 col-sm-2 col-md-2 text-center date-column">
          {% if content.dateDisplay %}
            {% assign date = content.dateDisplay %}
          {% elsif content.startDate and content.startDate != '' %}
            {% assign startDate = content.startDate | split: '-' | first %}
            {% assign endDate = content.endDate | split: '-' | first | default: 'Present' %}
            {% assign date = startDate | append: ' - ' %}
            {% assign date = date | append: endDate %}
          {% else %}
            {% assign date = null %}
          {% endif %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  {% if date %}
                    <span class="badge font-weight-bold light-color-dark align-middle date-badge" style="min-width: 75px"> {{ date }} </span>
                  {% endif %}
                </td>
              </tr>
              {% if content.location %}
                <tr>
                  <td>
                    <p class="location">
                      <i class="fa-solid fa-location-dot iconlocation"></i>
                      {{ content.location }}
                    </p>
                  </td>
                </tr>
              {% endif %}
            </tbody>
          </table>
        </div>
        <div class="col-xs-10 col-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            {% if content.url %}<a href="{{ content.url }}">{{ content.studyType }}</a>{% else %}{{ content.studyType }}{% endif %}
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.institution }}</h6>
          {% if content.area and content.area != '' %}
            <p class="ml-1 ml-md-4 mb-0" style="font-size: 0.85rem; color: var(--global-text-color-light)">{{ content.area }}</p>
          {% endif %}
          {% if content.score and content.score != '' %}
            <p class="ml-1 ml-md-4 mb-0" style="font-size: 0.85rem; color: var(--global-text-color-light)">GPA: {{ content.score }}</p>
          {% endif %}
          {% if content.courses.size > 0 %}
            <ul class="items">
              {% for item in content.courses %}
                <li>
                  <span class="item">{{ item }}</span>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
